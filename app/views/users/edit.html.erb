<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
<%= form_for @user do |f| %>
   <% if @user.errors.any? %>
     <%= @user.errors.count %>errors
      <ul>
   <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
     <% end %>
     </ul>
    <% end %>


    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true ,class: "form-control name"%>
    </div>

    <div class="form-group">
      <%= f.label :image %><br />
      <%= f.attachment_field :profile_image,class: "form-control-file user_image" %>
    </div>

    <div class="form-group">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, autofocus: true ,class: "form-control introduction"%>
    </div>

    <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
  </div>
 </div>
</div>
