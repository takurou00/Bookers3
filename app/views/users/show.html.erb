 <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'info', user: @user %>
      <%= render 'books/new', book: @book %>
      </div>
      </div>
   <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% @books.each do |book| %>
          <tr>
           <th></th>
            <th><%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
            <% end %></th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th><%= book.body %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
  </div>
</div>